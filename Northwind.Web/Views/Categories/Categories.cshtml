@model List<Category>;

@{
    ViewData["Title"] = "Categories";
}
<h3>@ViewData["Title"]</h3>


@if(Model.Count() == 0)
{
    <p>The list of categories is empty.</p>
}
else
{
    <table class="table table-sm table-striped">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
            <th scope="col"></th>
        </tr>
        </thead>
        @foreach(var category in Model)
        {
            <tr>
                <td scope="row">@category.CategoryName</td>
                <td scope="row">@category.Description</td>
                @if (category.Picture != null)
                {
                    <td scope="row">
                        <a asp-action="UploadImage" asp-route-id="@category.CategoryId" class="btn btn-secondary btn-sm">Download</a>
                    </td>
                }
                else
                {
                    <td scope="row">None</td>
                }
                <td scope="row">
                    <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-secondary btn-sm">Upload</a>
                </td>
            </tr>
        }
    </table>
}
